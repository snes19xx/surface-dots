{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "kitty",
        "source": "j.png",
        "width": 25,
        "height":10,
        "padding": {
            "top": 0,
            "left": 1
        }
    },
    "display": {
        "separator": " ▐ ",
        "color": {
            "separator": "bright_black",  
            "output": "white"            
        }
    },
    "modules": [
        {
            "type": "title",
            "color": {
                "user": "blue",  
                "at": "cyan",     
                "host": "blue"
            }
        },
        {
            "type": "separator",
            "string": "─",        
            "outputColor": "red"  
        },
        {
            "type": "os",
            "key": " ",
            "keyColor": "blue",   
            "format": "{3}"       
        },
        {
            "type": "kernel",
            "key": " ",
            "keyColor": "white",  
            "format": "{2}"      
        },
        {
            "type": "packages",
            "key": " ",
            "keyColor": "green"   
        },
        {
            "type": "shell",
            "key": " ",
            "keyColor": "yellow",
            "format": "{1} {4}" 
        },
        {
            "type": "terminal",
            "key": " ",
            "keyColor": "white"  
        },
        {
            "type": "wm",
            "key": " ",
            "keyColor": "magenta" 
        },
        {
            "type": "display",
            "key": "󰍹 ",
            "keyColor": "cyan",   
            "compactType": "original",
            "format": "{1}x{2}"   
        },
        {
            "type": "colors",
            "paddingLeft": 0,
            "symbol": "circle",
            "block": {
                "range": [0, 15], 
                "width": 3        
            }
        }
    ]
}